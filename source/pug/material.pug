doctype
html(lang="es")
    head
        include includes/head.pug


    body#page-home.theme-dark.page-header-textura

        header#CursoPresentacion.curso-presentacion.page-header
            .page-textura
                .container

                    +pageHeader("INVITADO", "assets/images/header/logoLE.png", "")   

        section#mainContent      

            h2 Puntos claves
            .brand-line-primary

            .row.justify-content-center
                .col-12.col-sm-10
